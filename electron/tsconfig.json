{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "../dist-electron",
    "rootDir": "..",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "electron"],
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": false,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "../tables.d.ts",
    "../tableSchema.ts",
    "../thanglish/TsciiConverter.ts",
    "../MyCache.ts",
    "../shared-types.d.ts"
  ]
}
