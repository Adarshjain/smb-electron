{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "../dist-electron",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "electron"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["*.ts"]
}
