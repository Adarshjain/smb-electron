{
  "name": "smb-electron",
  "productName": "Sri Mahaveer Bankers",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "npm run clean:electron && concurrently \"vite\" \"npm:dev:electron\"",
    "dev:electron": "wait-on tcp:5173 && concurrently \"npm:dev:electron:tsc\" \"npm:dev:electron:run\"",
    "dev:electron:tsc": "tsc -p electron/tsconfig.json --watch --preserveWatchOutput",
    "dev:electron:run": "wait-on dist-electron/electron/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 nodemon",
    "clean:electron": "node -e \"const fs = require('fs'); const path = 'dist-electron'; if (fs.existsSync(path)) fs.rmSync(path, {recursive: true, force: true}); fs.mkdirSync(path, {recursive: true});\" && node -e \"require('fs').cpSync('electron/package.json', 'dist-electron/package.json', {force: true})\"",
    "build": "vite build && tsc -p electron/tsconfig.json && npm run copy:icons && node -e \"require('fs').cpSync('electron/package.json', 'dist-electron/package.json', {force: true})\"",
    "build:app": "npm run build && electron-builder",
    "copy:icons": "node -e \"require('fs').cpSync('electron/build', 'dist-electron/build', {recursive: true})\"",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "build": {
    "appId": "sri.mahaveer.bankers",
    "productName": "Sri Mahaveer Bankers",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "electron/build",
        "to": "electron/build"
      }
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/build/logo.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/build/logo.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/build/logo.png"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/supabase-js": "^2.75.1",
    "@tailwindcss/vite": "^4.1.14",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.546.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.65.0",
    "react-router-dom": "^7.9.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.8.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "mdb-reader": "^3.1.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
